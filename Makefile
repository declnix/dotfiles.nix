# ðŸ“¦ Generate imports.nix automatically (must be last)
.PHONY: $(IMPORTS_FILE)
$(IMPORTS_FILE):
	@echo "{ " > $(IMPORTS_FILE)
	@echo "  imports = [" >> $(IMPORTS_FILE)
	@grep -rl '# @auto-import' nix | while read f; do \
	    echo "    ./$$f" >> $(IMPORTS_FILE); \
	done
	@echo "  ];" >> $(IMPORTS_FILE)
	@echo "}" >> $(IMPORTS_FILE)
